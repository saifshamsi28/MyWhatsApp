<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="-5dp"
    android:id="@+id/mini_layout"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mini_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/receive_message"
        android:text="Saif"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/mini_profile_img"
        app:layout_constraintEnd_toEndOf="@+id/mini_profile_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mini_profile_img"
        app:layout_constraintTop_toTopOf="@+id/mini_profile_img"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/mini_profile_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/mini_profile_img"
        app:layout_constraintStart_toStartOf="@+id/mini_profile_img"
        app:layout_constraintTop_toBottomOf="@id/mini_profile_img">

        <ImageView
            android:id="@+id/goto_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/icon_chat"
            app:tint="@color/GreenishBlue" />

        <ImageView
            android:id="@+id/make_audio_call"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/audio_call"
            app:tint="@color/GreenishBlue" />

        <ImageView
            android:id="@+id/make_video_call"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/video_call"
            app:tint="@color/GreenishBlue" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/info_btn"
            app:tint="@color/GreenishBlue" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>