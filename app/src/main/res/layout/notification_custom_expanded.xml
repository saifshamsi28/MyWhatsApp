<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/header_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="App Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sender_name_expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="Sender Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="Time" />
    </LinearLayout>

    <ImageView
        android:id="@+id/profile_image_expanded"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar"
        android:layout_below="@id/header_notification"
        android:layout_alignParentStart="true"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/message_text_expanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:layout_below="@id/header_notification"
        android:layout_toEndOf="@id/profile_image_expanded"
        android:paddingStart="8dp"
        android:paddingTop="4dp" />
</RelativeLayout>
