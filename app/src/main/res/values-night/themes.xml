<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyWhatsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/receive_message</item>
        <item name="colorPrimaryVariant">@color/GreenishBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--To set the colour of status bar-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyWhatsApp" parent="Base.Theme.MyWhatsApp" />

    <style name="Theme.ChatsActionbar" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <color name="primaryTextColor">#E6FFFFFF</color> <!-- White for dark mode -->
    <color name="secondaryTextColor">#D9CCCCCC</color>
    <color name="dividerColor">#444444</color>
    <color name="backgroundColor">#000000</color>

    <style name="ThemeOverlay.WAFragment.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
    <!-- Add other colors as needed -->

</resources>