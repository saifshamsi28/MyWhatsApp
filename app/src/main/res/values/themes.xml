<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyWhatsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/GreenishBlue</item>
        <item name="colorPrimaryVariant">@color/GreenishBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--To set the colour of status bar-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyWhatsApp" parent="Base.Theme.MyWhatsApp" />

    <style name="Theme.ChatsActionbar" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <color name="primaryTextColor">#E9000000</color> <!-- Black for light mode -->
    <color name="secondaryTextColor">#D9666666</color>
    <color name="dividerColor">#AAE2DD</color>
    <color name="backgroundColor">#FFFFFF</color>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    //full screen dialogue
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>